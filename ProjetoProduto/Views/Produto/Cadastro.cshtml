@model ProjetoProduto.Models.Produto;

<h2>Cadastro de Usuario</h2>

<form asp-action="Cadastro" method="post">
    <div>
        <label>Nome:</label>
        <input asp-for="Nome" required />
    </div>
    <div>
        <label>Descrição:</label>
        <input asp-for="Descricao" type="descricao" required />
    </div>
    <div>
        <label>Preço:</label>
        <input asp-for="Preco" type="preco" required />
    </div>
    <div>
        <label>Quantidade:</label>
        <input asp-for="Quantidade" type="quantidade" required />
    </div>
    <button type="submit">Novo Cadastrado</button>
</form>
